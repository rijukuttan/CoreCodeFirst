@model IEnumerable<Category>
<div class="container-fluid">
    <div class="row mt-4">
        <div class="col-md-6">
            <h2>Category Dashboard</h2>
        </div>
          <div class="col-md-6 text-end">
               <a class="btn btn-outline-success" asp-area="Admin" asp-controller="Category" asp-action="CreateCategory"><i class="bi bi-plus-circle"></i>Create Category</a>          
        </div>
    </div>

    <partial name="_Notification"/>
    <table class="table container-fluid">
        <thead>
            <tr>
                <th style="margin:0%;padding:0%">Category Id</th>
                <th style="margin:0%;padding:0%">Category Name</th>             
                 <th style="margin:0%;padding:0%">Actions</th>
            </tr>    
        </thead>
        <tbody>
            @foreach(var category in Model)
            {
                <tr>
                    <td class="col-lg-2" >@category.Id</td>
                    <td class="col-lg-2"  >@category.CategoryName</td>
           
                    <td class="col-lg-2" >
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Category" asp-route-id="@category.Id" asp-action="Edit"><i class="bi bi-pencil-square"></i></a>
                        
                       @* <a class="btn btn-danger" asp-area="" id="btnDelete" type="submit" onclick="DeleteCall(@product.Id)">*@
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Category" asp-route-id="@category.Id" asp-action="Delete" >
                       <i class="bi bi-trash"></i></a>                   
                    </td>      
                </tr>            
            }
        </tbody>
    </table>
</div>
 <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://ajax.cdnjs.com/ajax/libs/json2/20110223/json2.js"></script>


