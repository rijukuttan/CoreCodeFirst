@model Product
<div class="container">
    <div class="col-md-6 align-self-auto mt-4 border border-1 p-3 rounded-2">
    <div class="row">
        <h2>Delete Product</h2>
    </div>
    <div class="row">
        <form method="post" asp-action="Delete" id="DeleteProduct">
          <input asp-for="Id" hidden />
            <div class="form-group">
                <label asp-for="ProductName" class="form-label"></label>
                <input asp-for="ProductName" class="form-control" disabled>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="form-label"></label>
                <input asp-for="ProductPrice" class="form-control" disabled>
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Describtion" class="form-label"></label>
                <input asp-for="Describtion" class="form-control" disabled>
                <span asp-validation-for="Describtion" class="text-danger"></span>
            </div>
          
            <div class="mt-2">
                <button type="submit" class="btn btn-primary">Delete Product</button>
                <a class="btn btn-outline-secondary" asp-controller="Product" asp-action="Index">Back To List</a>
            </div>
        </form>
    </div>
     </div>
</div>
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
