
    <table class="table container-fluid">
        <thead>
            <tr>
                <th style="margin:0%;padding:0%">Product Name</th>
                <th style="margin:0%;padding:0%">Product Price</th>
                <th style="margin:0%;padding:0%">Create Date</th>
                <th style="margin:0%;padding:0%">Modified Date</th>
                <th style="margin:0%;padding:0%">Describtion</th>
                 <th style="margin:0%;padding:0%">Actions</th>
            </tr>    
        </thead>
        <tbody>
            @foreach(var product in Model)
            {
                <tr id="@product.Id">
                    <td class="col-lg-2" >@product.ProductName</td>
                    <td class="col-lg-2"  >@product.ProductPrice</td>
                    <td class="col-lg-2" >@product.CreateDate</td>
                    <td class="col-lg-2" >@product.ModifyDate</td>
                    <td class="col-lg-2">@product.Describtion</td>
                    <td class="col-lg-2" >
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Product" asp-route-id="@product.Id" asp-action="EditOrInsert"><i class="bi bi-pencil-square"></i></a>
                        
                       @* <a class="btn btn-danger" asp-area="" id="btnDelete" type="submit" onclick="DeleteCall(@product.Id)">*@
                         @*   <a class="btn btn-danger" asp-area="Admin" asp-controller="Product" asp-route-id="@product.Id" asp-route="DeleteProduct"  >
                       <i class="bi bi-trash"></i></a>  *@   
                         <a class="btn btn-danger" id="btnDelete" onclick="confirm('Are you sure,you want to delete ?') && DeleteCall(@product.Id)"  >
                       <i class="bi bi-trash"></i></a>
                    </td>      
                </tr>            
            }
        </tbody>
    </table>

