@model ShoppingCart
<form method="post">
  @*  <input hidden asp-for="Product.Id"/>*@
    <div class="cart container pt-4">
        <div class="card-header bg-dark ml-0 row">
            <div class="col-12">
                <h3 class="text-white">@Model.Product.ProductName</h3>
                <p class="text-warning">Price: @Model.Product.ProductPrice</p>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="row col-8 col-lg-8">
                        <div class="row pl-2">
                            <h5 class="text-dark">@Html.Raw(Model.Product.ProductName)</h5>
                        </div>
                        <div class="row pl-2">
                            <h6 class="text-dark">$@Html.Raw(Model.Product.ProductPrice)</h6>
                        </div>
                        <div class="row pl-2">
                            <h6 class="text-dark">@Html.Raw(Model.Product.Describtion)</h6>
                        </div>
                        <div class="row pl-2">
                            <div class="col-2 text-dark"><h4>Count : </h4></div>
                            <div class="col-10 col-lg-8"><input asp-for="Count" class="form-control"/></div>
                        </div>
                         <div class="col-6 col-lg-6 d-grid gap-2 p-1">
                <button type="submit" class="btn btn-primary btn-dark">Add To Cart</button>
            </div>
                     <div class="col-6 col-lg-6 d-grid gap-2 p-1">
                <button type="submit" class="btn btn-primary btn-dark">Buy Now</button>
            </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img style="border: 1px solid #ddd;border-radius: 4px;padding: 5px;width: 150px;" src="@Model.Product.ImageUrl" class="rounded"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>